<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editCommerceCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo comercio" />

    <EditText
        android:id="@+id/editTerminalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo Terminal " />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto" />

    <EditText
        android:id="@+id/editCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero Tarjeta" />

    <Button
        android:id="@+id/btnAuthorize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autorizar" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transacciones Aprobadas" />
</LinearLayout>
